<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bin</id>
  <includeBaseDirectory>true</includeBaseDirectory>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <files>
    <file>
      <source>../jarboot-agent/target/jarboot-agent-jar-with-dependencies.jar</source>
      <destName>bin/jarboot-agent.jar</destName>
    </file>
    <file>
      <source>../jarboot-spy/target/jarboot-spy.jar</source>
      <destName>bin/jarboot-spy.jar</destName>
    </file>
    <file>
      <source>../jarboot-core/target/jarboot-core.jar</source>
      <destName>bin/jarboot-core.jar</destName>
    </file>
    <file>
      <source>../jarboot-server/target/jarboot-server.jar</source>
      <destName>bin/jarboot-server.jar</destName>
    </file>
    <file>
      <source>../jarboot-server/src/main/resources/jarboot.properties</source>
      <destName>conf/jarboot.properties</destName>
    </file>
    <file>
      <source>../demo-server/target/demo-server.jar</source>
      <destName>services/demo-server/demo-server.jar</destName>
    </file>
    <file>
      <source>../plugins/shell-plugin/target/shell-plugin.jar</source>
      <destName>plugins/agent/shell-plugin.jar</destName>
    </file>
    <file>
      <source>../plugins/debug-plugin/target/debug-plugin.jar</source>
      <destName>plugins/server/debug-plugin.jar</destName>
    </file>
    <file>
      <source>../doc/jarboot.png</source>
      <destName>bin/splash.png</destName>
    </file>

    <file>
      <source>bin/shutdown.sh</source>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>bin/shutdown.cmd</source>
    </file>
    <file>
      <source>bin/startup.sh</source>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>bin/startup.cmd</source>
    </file>
    <file>
      <source>bin/jt.sh</source>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>bin/jt.cmd</source>
    </file>
  </files>
</assembly>
