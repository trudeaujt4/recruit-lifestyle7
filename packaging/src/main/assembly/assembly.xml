<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.1 http://maven.apache.org/xsd/assembly-1.1.1.xsd">
  <id>bin</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>dir</format>
    <format>zip</format>
  </formats>

  <files>
    <file>
      <source>../jarboot-agent/target/jarboot-agent-jar-with-dependencies.jar</source>
      <destName>jarboot-agent.jar</destName>
    </file>
    <file>
      <source>../jarboot-spy/target/jarboot-spy.jar</source>
      <destName>jarboot-spy.jar</destName>
    </file>
    <file>
      <source>../jarboot-core/target/jarboot-core.jar</source>
      <destName>jarboot-core.jar</destName>
    </file>
    <file>
      <source>../jarboot-service/target/jarboot-service.jar</source>
      <destName>jarboot-service.jar</destName>
    </file>
    <file>
      <source>../jarboot-service/src/main/resources/jarboot.properties</source>
      <destName>jarboot.properties</destName>
    </file>
    <file>
      <source>../demo-server/target/demo-server.jar</source>
      <destName>services/demo-server/demo-server.jar</destName>
    </file>

    <file>
      <source>boot.sh</source>
      <fileMode>0755</fileMode>
    </file>
    <file>
      <source>boot.bat</source>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>../jarboot-ui/dist</directory>
      <outputDirectory>static</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
